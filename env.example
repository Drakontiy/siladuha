# Telegram Bot Token (получите у @BotFather)
BOT_TOKEN=your_bot_token_here

# URL для Mini App (должен быть HTTPS для работы в Telegram)
# Для разработки используйте ngrok или cloudflare tunnel
# Пример: MINIAPP_URL=https://your-ngrok-url.ngrok.io
MINIAPP_URL=http://localhost:3000

# Порт для сервера (опционально, по умолчанию 3000)
PORT=3000

# Webhook настройки (если используете webhook вместо polling)
# WEBHOOK_URL=https://yourdomain.com/webhook
# WEBHOOK_SECRET=your_webhook_secret_here
