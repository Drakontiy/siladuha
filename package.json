{
  "name": "telegram-bot-miniapp",
  "version": "1.0.0",
  "description": "Simple Telegram bot with mini app",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:bot\" \"npm run dev:miniapp\"",
    "dev:bot": "ts-node-dev --respawn --transpile-only src/bot.ts",
    "dev:miniapp": "webpack serve --mode development",
    "build": "tsc && webpack --mode production",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "telegraf": "^4.15.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}